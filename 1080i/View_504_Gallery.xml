<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--STRIP LAYOUT-->
    <include name="View_504_Gallery">
		<top>15</top>
        <!--content detail-->
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <include>Animation.Common</include>
            <!--flags-->
			<control type="label">
				<visible>![Window.IsActive(pictures) + Skin.HasSetting(PictureInfo.Disabled)]</visible>
				<left>383</left>
                <top>760</top>
				<label>$INFO[ListItem.Label]</label>
				<width>1225</width>
				<font>font28_title</font>
			</control>
			<control type="label">
				<left>383</left>
				<top>940</top>
				<width>1225</width>
				<height>30</height>
				<font>font13_title</font>
				
				<label>$VAR[FloorSubLabelVar]</label>
				<visible>![Container.Content(artists) | Window.IsActive(pictures)]</visible>
			</control>
			<control type="label">
				<left>383</left>
				<top>940</top>
				<width>1225</width>
				<height>30</height>
				<font>font13_title</font>
				
				<label>$INFO[ListItem.Property(Artist_Genre)]</label>
				<visible>Container.Content(artists)</visible>
			</control>
            <!--strip top-->
            <control type="image">
            	<visible>Control.HasFocus(504)</visible>
                <include>FocusedBackgroundFade</include>
            	<top>203</top>
            	<left>370</left>
                <width>1179</width>
                <height>674</height>
				<fadetime>2000</fadetime>
				<texture colordiffuse="$VAR[LibColorHighlightVar]">$VAR[FocusImage]</texture>
					<animation effect="fade" end="70" start="0" time="1000" condition="!String.IsEqual(Window(home).Property(cpa_daemon_set),None) + Skin.HasSetting(View.Pulse.Focus)" pulse="true" delay="0">Conditional</animation>
			</control>
            <!--container-->
            <control type="wraplist" id="504">
                <viewtype label="31054">info</viewtype>
                <left>-791</left>
                <top>209</top>
				<width>3464</width>
                <height>1200</height>
                <onleft>504</onleft>
                <onright>504</onright>
                <scrolltime tween="sine" easing="inout">400</scrolltime>
                <onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<pagecontrol>60</pagecontrol>
                <focusposition>1</focusposition>
                <orientation>horizontal</orientation>
                <itemlayout width="1167" height="650">
                    <control type="group">
                    	<top>6</top>
                    	<left>6</left>
                        <control type="image">
							<visible>!Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <control type="image">
							<visible>ListItem.IsFolder + Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <control type="image">
                            <visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
                            <left>6</left>
                            <top>420</top>
                            <width>1155</width>
                            <height>168</height>
                            <aspectratio align="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                        </control>
                        <control type="image">
                            <width>1155</width>
                            <height>650</height>
                            <texture>thumbs/diffuse.png</texture>
                        </control>
                        <include content="OverlayIcons" condition="![Window.IsActive(pictures) | Container.Content(artists)]">
                            <param name="OverlayLeft" value="1095" />
                            <param name="OverlayTop" value="0" />
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout width="1167" height="650">
                    <control type="group">
                        <include>PanelFocusedItemZoom</include>
                        <top>6</top>
                    	<left>6</left>
						<control type="image">
							<visible>ListItem.IsFolder + !Container.Content(artists)</visible>
                            <width>1155</width>
                            <height>650</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <control type="image">
							<visible>!Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture fallback="special://skin/backgrounds/default_bg.jpg" background="true">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <control type="image">
							<visible>![Window.IsActive(pictures) | Container.Content(artists)]</visible>
                            <left>6</left>
                            <top>420</top>
                            <width>1155</width>
                            <height>168</height>
							<aspectratio align="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                        </control>
						<control type="image">
							<visible>Window.IsActive(pictures)</visible>
                            <width>1155</width>
                            <height>650</height>
                            <texture background="true">$INFO[ListItem.PicturePath]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
                        </control>
                        <include content="OverlayIcons" condition="![Window.IsActive(pictures) | Container.Content(artists)]">
                            <param name="OverlayLeft" value="1095" />
                            <param name="OverlayTop" value="0" />
                        </include>
                    </control>
                </focusedlayout>
            </control>
			<control type="image">
				<left>388</left>
				<top>640</top>
				<width>1155</width>
				<height>168</height>
				<aspectratio>keep</aspectratio>
				<texture background="true">$INFO[Window(Home).Property(SkinHelper.Music.ClearLogo)]</texture>
				<visible>Container.Content(artists)</visible>
			</control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <top>-15</top>
            <include>Scrollbar_Horizontal</include>
        </control>
    </include>
</includes>