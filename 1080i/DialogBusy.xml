<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
	<system>1</system>
	<left>-12</left>
	<top>-12</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<visible>Window.IsActive(home) + !Skin.HasSetting(Enable.HomeTopbar)</visible>
			<animation effect="slide" time="300" tween="cubic" easing="out" start="0,0" end="0,120" condition="String.IsEqual(Skin.String(HomeLayout),2)">Conditional</animation>
			<control type="image">
				<description>background image</description>
				<width>1944</width>
				<height>140</height>
				<texture border="12">dialog_context.png</texture>
				<colordiffuse>$VAR[ColorDialogVar]</colordiffuse>
			</control>
			<control type="progress" id="10">
				<description>progress control</description>
				<left>30</left>
				<top>30</top>
				<right>6</right>
				<height>80</height>
			</control>
			<control type="image">
                <description>Busy animation</description>
                <top>40</top>
                <left>40</left>
                <width>60</width>
                <height>60</height>
                <texture colordiffuse="$VAR[ColorTextVar]" fallback="special://skin/extras/spinners/Sun.png">$INFO[Skin.String(busyloader)]</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="rotate" start="360" end="0" center="auto" time="3000" loop="true" condition="true">conditional</animation>
            </control>
			<control type="list">
				<left>150</left>
				<top>28</top>
				<width>300</width>
				<height>80</height>
				<scrolltime tween="quadratic" easing="out">0</scrolltime>
				<autoscroll time="1000" repeat="1000">true</autoscroll>
				<orientation>vertical</orientation>
				<itemlayout height="80">
					<control type="label">
						<description>Busy label</description>
						<width>300</width>
						<height>80</height>
						<label>$INFO[ListItem.Label]</label>
						<font>font15_title</font>
					</control>
				</itemlayout>
				<focusedlayout height="80">
					<control type="label">
						<description>Busy label</description>
						<width>300</width>
						<height>80</height>
						<label>$INFO[ListItem.Label]</label>
						<font>font15_title</font>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[31004]</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004].</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]..</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31004]...</label>
						<onclick>noop</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>