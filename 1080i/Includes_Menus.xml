	<include name="MenuClockWeather">
		<control type="group">
            <include condition="String.IsEqual(Skin.String(HomeLayout),3)">MainMenuSlide</include>
			<visible>!Skin.HasSetting(Disable.WeatherClockDate) + Skin.HasSetting(Enable.WeatherInMenu)</visible>
			<left>$PARAM[MenuClockLeft]</left>
			<top>$PARAM[MenuClockTop]</top>
			<control type="grouplist">
				<top>8</top>
				<left>15</left>
				<width>354</width>
				<height>45</height>
				<align>$PARAM[MenuClockAlign]</align>
				<orientation>Horizontal</orientation>
				<control type="label" id="1">
					<width>auto</width>
					<height>45</height>
					<font>font28_title</font>
					<label>$INFO[System.Time,, ]</label>
					<visible>Weather.IsFetched + !String.IsEmpty(Weather.Plugin) + !String.Contains(Weather.Temperature,$LOCALIZE[503])</visible>
				</control>
				<control type="label" id="2">
					<width>auto</width>
					<height>45</height>
					<label>$INFO[Weather.Temperature,[LIGHT],[/LIGHT]]</label>
					<font>font28_title</font>
				</control>
			</control>
			<control type="label">
				<top>55</top>
				<width>384</width>
				<height>45</height>
				<label>[B]$INFO[System.Date(ddd)], $INFO[System.Date(mmm d)], $INFO[System.Date(yyyy)][/B]</label>
				<font>topbar</font>
				<align>$PARAM[MenuClockAlign]</align>
				<textoffsetx>15</textoffsetx>
				<textcolor>$VAR[ColorHighlightVar]</textcolor>
