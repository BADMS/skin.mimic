<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="HomeDefault">
		<include condition="!Skin.HasSetting(Disable.Videoinfo)">NowPlayingVideoWidget</include>
		<include condition="!Skin.HasSetting(Disable.Musicinfo)">NowPlayingMusicWidget</include>
		<include condition="!Skin.HasSetting(Disable.WeatherClockDate)">WeatherHomeWidget</include>
		<control type="group">
			<visible>![Window.IsVisible(favourites) | Window.IsVisible(script-globalsearch-main.xml) | Window.IsVisible(script-lazytv-main.xml) | Window.IsVisible(script-lazytv-BigScreenList.xml)]</visible>
			<animation effect="slide" time="0" start="0,0" end="0,-70" condition="system.getbool(lookandfeel.enablerssfeeds)">Conditional</animation>
			<top>1200</top>
			<animation effect="slide" tween="cubic" time="600" start="0,700" end="0,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="300" start="0,0" end="0,700" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="cubic" time="600" start="0,700" end="0,0" reversible="false">Visible</animation>
			<animation effect="slide" tween="cubic" time="300" start="0,0" end="0,700" reversible="false">Hidden</animation>
			<!-- Main Menu (Includes_Home.xml) -->
			<control type="image">
				<animation type="Conditional" condition="[Control.HasFocus(9010) | Control.HasFocus(9000) | Control.HasFocus(9001)] + Window.IsActive(home) + Integer.IsEqual(Window(Home).Property(ImageUpdating),0)" reversible="false">
					<effect type="fade" delay="0" start="0" end="100" time="1000" />
				</animation>
				<animation type="Conditional" condition="[Control.HasFocus(9010) | Control.HasFocus(9000) | Control.HasFocus(9001)] + Window.IsActive(home) + Integer.IsEqual(Window(Home).Property(ImageUpdating),1)" reversible="false">
					<effect type="fade" delay="0" start="100" end="0" time="1000" />
				</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,-653" tween="cubic" reversible="true" condition="!String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets)">Conditional</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,-333" tween="cubic" reversible="true" condition="String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets) + Control.HasFocus(9010)">Conditional</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,320" tween="cubic" reversible="true" condition="String.IsEqual(Container(9000).ListItem.Property(widgetName),weather) + !Weather.IsFetched + !String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets)">Conditional</animation>
				<width>FullScreenWidth</width>
				<height>700</height>
				<texture background="true">background.png</texture>
				<colordiffuse>$VAR[MenuListOldColorHighlightVar]</colordiffuse>
			</control>
			<control type="image">
				<animation type="Conditional" condition="[Control.HasFocus(9010) | Control.HasFocus(9000) | Control.HasFocus(9001)] + Window.IsActive(home) + Integer.IsEqual(Window(Home).Property(ImageUpdating),1)" reversible="false">
					<effect type="fade" delay="0" start="0" end="100" time="1000" />
				</animation>
				<animation type="Conditional" condition="[Control.HasFocus(9010) | Control.HasFocus(9000) | Control.HasFocus(9001)] + Window.IsActive(home) + Integer.IsEqual(Window(Home).Property(ImageUpdating),0)" reversible="false">
					<effect type="fade" delay="0" start="100" end="0" time="1000" />
				</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,-653" tween="cubic" reversible="true" condition="!String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets)">Conditional</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,-333" tween="cubic" reversible="true" condition="String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets) + Control.HasFocus(9010)">Conditional</animation>
				<animation effect="slide" time="300" delay="0" start="0" end="0,320" tween="cubic" reversible="true" condition="String.IsEqual(Container(9000).ListItem.Property(widgetName),weather) + !Weather.IsFetched + !String.IsEmpty(Container(9000).ListItem.Property(widgetName)) + Skin.HasSetting(Enable.PersistentWidgets)">Conditional</animation>
				<width>FullScreenWidth</width>
				<height>700</height>
				<texture background="true">background.png</texture>
				<colordiffuse>$VAR[MenuListColorHighlightVar]</colordiffuse>
			</control>
			<include condition="!Skin.HasSetting(Enable.CenteredMenu)">MainMenuList</include>	
		</control>
		<include condition="system.getbool(lookandfeel.enablerssfeeds)">RSSFeedWidget</include>
		<include>HomeDefaultWidgets</include>
	</include>
</includes>